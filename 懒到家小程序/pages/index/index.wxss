/**首页样式**/
.container {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
}
.section {
  width: 100%;
}
/*搜索框 */
.searchBox {
  position: relative;
  left: 0;
  top: 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100rpx;
  background-color: #00b886;
  line-height: 100rpx;
}

.search-outer {
  position: relative;
  left: 0;
  top: 0;
  width: 90%;
  height: 70rpx;
  border-radius: 50rpx;
  background-color: white;
  font-size: 26rpx;
  color: #666;
}
/*鼠标点击态  */
.bind-search-area {
  background-color: #ececec;
}
.searchBox .search-inner {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  position: absolute;
  left: 50%;
  top: 50%;
  -o-transform: translate( -50%, -50% );
  transform: translate( -50%, -50% );
}
/*搜索图标  */
.searchBox .search-inner .icon-search {
  width: 50rpx;
  height: 50rpx;
}

/*轮播图区  */
.section-banner {
  height: 380rpx;
  width: 100%;
   background-color: #ececec; 
}
.banner-outer, .banner-inner {
  width: 100%;
  height: inherit;
  background-color: papayawhip;
}
.banner-images {
  width: 100%;
  height: inherit;
  border: 0;
}

/*列表导航区域  */
.section-cells {
  height: 160rpx;
  /* background-color: #eee; */
}
.cells-list {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cells-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-images {
  margin: 16rpx 0 2rpx 0;
  width: 110rpx;
  height: 110rpx;
}
.item-text {
  margin-top: -10rpx;
  font-size: 26rpx;
  color: #999999;
  background-color: #fff;
  width: 110rpx;
  text-align: center;
}
/*活动区域  */
.section-main {
  height: 380rpx;
  width: 100%;
  padding: 14rpx 0;
  background-color: #fff;
  flex-direction: column;
}

/*推荐产品分割线  */
.lineView {
  width: 100%;
  height: 10rpx;
  background-color: #f2f2f2;
}
/*推荐产品标题  */
.activeTitView {
  width: 100%;
  background-color: #fff;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.activeTit {
  /* background-color: red; */
  color: #111;
  font-size: 30rpx;
  margin-left: 10rpx;
}
.main-list {
  height: inherit;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.main-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1;
  /* width: 49.33%; */
  padding-left: 10rpx;
}
.main-item:first-child {
  padding-left: 0;
}
.main-item .main-image {
  width: 100%;
  height: 280rpx;
}